@page
@using WebMVC

<!DOCTYPE html>

<html lang="tr">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>DOSYA ŞİFRELEME</title>
	<link rel="stylesheet" href="/css/Home/Index/index.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/js/Home/Index/index.js"></script>
</head>
<body>
	<h2>DOSYA ŞİFRELEME</h2>
	<hr class="top-line">
	<div class="container">
		<form id="fileUploadForm">
			<div id="inputStatusDiv">
				<h4 id="inputStatusMessage">Dosya seçilmedi.</h4>
				<div id="wrapper">
				</div>
			</div>
			<label for="fileInputBox" class="custom-file-upload">Dosya Seç</label>
			<input type="file" id="fileInputBox" accept="*" required multiple>
			<br>
			<button type="submit" id="encryptButton">Şifreleme</button>
			<button type="button" id="decryptButton">Çözümleme</button>
		</form>
	</div>
</body>
</html>
